{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "vite/client"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts"
  ]
}